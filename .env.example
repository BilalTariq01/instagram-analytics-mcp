# Instagram Graph API Access Token
# Get your access token from: https://developers.facebook.com/docs/instagram-basic-display-api/getting-started
INSTAGRAM_ACCESS_TOKEN=your_access_token_here

# Instagram Business Account ID (optional - will be auto-detected if not provided)
INSTAGRAM_ACCOUNT_ID=your_account_id_here

# Facebook Page Access Token (required for facebook platform)
FACEBOOK_PAGE_ACCESS_TOKEN=your_page_access_token_here

# Facebook Page ID (required for facebook platform)
FACEBOOK_PAGE_ID=your_page_id_here

# Facebook Graph API version (optional, defaults to v22.0)
FACEBOOK_API_VERSION=v22.0

# Facebook App Access Token (optional, enables token validation helper)
FACEBOOK_APP_ACCESS_TOKEN=your_app_access_token_here
